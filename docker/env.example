# =============================================================================
# Cloud Secrets Manager - Environment Variables
# =============================================================================
# Copy to .env.local:  cp env.example .env.local
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_DB=csm
POSTGRES_USER=csm
POSTGRES_PASSWORD=csm

# -----------------------------------------------------------------------------
# Backend Security
# -----------------------------------------------------------------------------
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# -----------------------------------------------------------------------------
# Firebase / Google Identity
# -----------------------------------------------------------------------------
GOOGLE_IDENTITY_ENABLED=true
GOOGLE_PROJECT_ID=your-firebase-project-id

# -----------------------------------------------------------------------------
# Frontend - Firebase Config
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8080
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef
